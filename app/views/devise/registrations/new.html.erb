<section id="signin" class="sign-wrapper signup">
  <div class="row">
    <div class="col-md-offset-4 col-sm-offset-0 col-xs-offset-0 col-md-4 col-sm-12 col-xs-12">
      <%= render "devise/shared/brand" %>
      <div class="sign-container" style="margin-top: -20px">
        <div class="panel panel-default">
          <div class="panel-intro text-center">
            <h2> 
                <span>Sign up </span> 
            </h2>
          </div>

          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: 'Username' %>
              </div><!-- /form-group -->

              <div class="form-group">
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
              </div><!-- /form-group -->

              <div class="form-group">
                <%= f.text_field :icq_number, autofocus: true, class: 'form-control', placeholder: 'ICQ number (*optional)' %>
              </div><!-- /form-group -->

              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
              </div><!-- /form-group -->

              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm password' %>
              </div><!-- /form-group -->

              <p><%= captcha_tag %></p>
              <p><%= text_field_tag :captcha %></p>

              <div class="form-group">
                <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
              </div><!-- /form-group -->
            <% end %>
          </div>
        </div>
      </div><!-- /sign-container -->
    </div><!-- /col -->
  </div><!-- /row -->

  <div class="sign-footer">
    <%= render "devise/shared/links" %>
  </div><!-- /sign-footer -->
</section><!-- /signin -->
