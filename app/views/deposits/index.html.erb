<p id="notice"><%= notice %></p>

<h1>Listing Deposits</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Available balance</th>
      <th>Pending received</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deposits.each do |deposit| %>
      <tr>
        <td><%= deposit.address %></td>
        <td><%= deposit.available_balance %></td>
        <td><%= deposit.pending_received %></td>
        <td><%= deposit.user %></td>
        <td><%= link_to 'Show', deposit %></td>
        <td><%= link_to 'Edit', edit_deposit_path(deposit) %></td>
        <td><%= link_to 'Destroy', deposit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

