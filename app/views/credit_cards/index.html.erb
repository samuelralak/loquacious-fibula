<p id="notice"><%= notice %></p>

<h1>Listing Credit Cards</h1>

<table>
  <thead>
    <tr>
      <th>Bin</th>
      <th>Card number</th>
      <th>Card holder</th>
      <th>Cvv</th>
      <th>Expiry</th>
      <th>Brand</th>
      <th>Card type</th>
      <th>Bank</th>
      <th>Country code</th>
      <th>Country name</th>
      <th>State</th>
      <th>City</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.bin %></td>
        <td><%= credit_card.card_number %></td>
        <td><%= credit_card.card_holder %></td>
        <td><%= credit_card.cvv %></td>
        <td><%= credit_card.expiry %></td>
        <td><%= credit_card.brand %></td>
        <td><%= credit_card.card_type %></td>
        <td><%= credit_card.bank %></td>
        <td><%= credit_card.country_code %></td>
        <td><%= credit_card.country_name %></td>
        <td><%= credit_card.state %></td>
        <td><%= credit_card.city %></td>
        <td><%= credit_card.zip %></td>
        <td><%= link_to 'Show', credit_card %></td>
        <td><%= link_to 'Edit', edit_credit_card_path(credit_card) %></td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

