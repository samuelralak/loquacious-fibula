<section id="content" class="content content-lg">
	<%= render 'layouts/main_header', flash: flash %>

	<div class="content-splitter">
		<section id="content-main" class="content-main">
			<div class="content-app">
				<div class="app-header">
					<h3 class="app-title">Adding Credit Cards</h3>
				</div>
				<%= render 'layouts/notice', flash: flash %> 

				<div class="app-body">
					<div class="center-block center-box">
						<div class="row">
							<div class="col-md-12">
								<div class="box">
									<%= form_tag(credit_cards_path, method: :post, class: 'form-horizontal') do %>
										<%= field_set_tag 'Your details' do %>
											<div class="form-group">
												<label class="col-sm-2 control-label">Card number</label>
												<div class="col-sm-10">
													<%= text_field_tag 'card_number[]', params[:credit_cards], placeholder: 'Enter card number', class: 'form-control' %>
												</div>
											</div>

											<div class="form-group">
												<label class="col-sm-2 control-label">Card holder</label>
												<div class="col-sm-10">
													<%= text_field_tag 'card_holder[]', params[:credit_cards], placeholder: 'Card holder', class: 'form-control' %>
												</div>
											</div>

											<div class="form-group">
												<label class="col-sm-2 control-label">CVV</label>
												<div class="col-sm-10">
													<%= text_field_tag 'cvv[]', params[:credit_cards], placeholder: 'cvv', class: 'form-control' %>
												</div>
											</div>


											<div class="form-group">
												<label class="col-sm-2 control-label">Expiry</label>
												<div class="col-sm-10">
													<%= date_field_tag 'expiry[]', params[:credit_cards], class: 'form-control' %>
												</div>
											</div>
										<% end -%>
									<% end -%>
									<%= @credit_cards.inspect %>		
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</section>