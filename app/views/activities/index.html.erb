<section id="content" class="content content-lg">
	<%= render 'layouts/main_header', flash: flash %>

	<div class="content-splitter">
		<section id="content-main" class="content-main">
			<div class="content-app">
				<%= render 'layouts/secondary_header', flash: flash %>

				<div class="app-body">
					 <!-- app content here -->
					 <div class="center-block center-box">
					 	<div class="row">
					 		<div class="col-md-12" style="margin-bottom: 12px;">
					 			<div class="">
					 				<div class="timeline">
					 					<div class="timeline-header">
					 						<div class="timeline-header-title bg-info">
					 							Now
					 						</div>
					 					</div>

					 					<% @activities.each_with_index do |activity, index| %>
					 						<div class="timeline-entry">
					 							<div class="timeline-stat">
					 								<div class="timeline-icon"></div>
					 								<div class="timeline-time">
					 									<%= "#{time_ago_in_words(activity.created_at)} ago." %>
					 								</div>
					 							</div>
					 						</div>

					 						<div class="timeline-label">
												<%= render "activities/#{activity.trackable_type.underscore}/#{activity.action}", :locals => { :activity => activity, :index => index }%>
					 						</div>
					 					<% end -%>
					 				</div>
					 			</div>
					 		</div>
					 	</div>
					 </div>
				</div>
			</div>
		</section>
	</div>
</section>
