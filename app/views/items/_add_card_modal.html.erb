<!-- Modal -->
<div class="modal fade" id="binModal" tabindex="-1" role="dialog" aria-labelledby="binModal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">Add Cards</h4>
			</div>
			<div class="alert alert-info text-center" style="margin-bottom: 0 !important;">
				Enter card details in the following format: 4319401103049729|072020|674 <br/>
				<b>OR</b>
				<br />
				upload text file
			</div>
			
			<div class="modal-body">
				<%= form_tag(process_bin_path, method: :post, multipart: true, class: "form-horizontal",  id: "uploadForm") do %>
					<legend>upload file</legend>
					<div class="form-group">
						<label class="col-sm-2 control-label">Upload file:</label>
						<div class="col-sm-8">
							<input accept="text/*" class="form-control" id="file" name="file" type="file" />
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<button data-disable-with="Uploading..." name="button" type="submit" class="btn btn-primary btn-sm">Upload</button>	
						</div>
					</div>
					
				<% end %>
				<hr />
				<%= form_tag(process_bin_path, method: :post, class: "form-horizontal",  id: "binForm") do %>
					<legend>enter details</legend>
					<div class="form-group">
						<label class="col-sm-2 control-label">Card:</label>
						<div class="col-sm-8">
							<input type='text', name="bin[]", placeholder="card_number|expiry|cvv", class="form-control">
						</div>
					</div>

					<%= link_to_add_field "#{fa_icon 'plus-circle'} Add field".html_safe %>
					<div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<button data-disable-with="Processing..." name="button" type="submit" class="btn btn-primary btn-sm">Process</button>	
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>