<section id="content" class="content content-lg">
	<%= render 'layouts/main_header', flash: flash %>

	<div class="content-splitter">
		<section id="content-main" class="content-main">
			<div class="content-app">
				<%= render 'layouts/secondary_header', flash: flash %>

				<div class="app-body">
					<div class="center-block center-box">
						<div class="row">
							<div class="col-md-12" style="margin-bottom: 5px;">
								<div class="pull-left">
									<form class="form-inline">
										<div class="form-group">
											<label class="sr-only">Search</label>
											<input type="text"
												class="light-table-filter form-control" id="inputPassword2"
												placeholder="Search orders by status"
												data-table="order-table"
												style="width: 300px !important;">
										</div>
										<button type="submit" class="btn btn-default"><%= fa_icon 'search' %></button>
									</form>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="card">
									<div class="card-header">
										<h2>My Orders <br />
										</h2>
									</div>

									<div class="table-responsive">
										<table id="data-table-selection" class="order-table table table-striped">
											<thead>
												<tr>
													<th>DATA</th>
													<th>INFO</th>
													<th>SELLER</th>
													<th>DATE</th>
													<th>REPORT</th>
													<th>CHECK</th>
												</tr>
											</thead>

											<tbody>
												<%- @orders.each do |order| %>
													<%- unless order.order_items.count.eql?(0) %>
														<tr id="row_<%= order.id %>">
															<td style="color: #3498db">
																<%= "#{order.order_items.first.item.itemable.card_number}
																|#{order.order_items.first.item.itemable.expiry}
																|#{order.order_items.first.item.itemable.cvv}
																|#{order.order_items.first.item.itemable.card_holder}
																|#{order.order_items.first.item.itemable.card_info}
																|#{order.order_items.first.item.itemable.zip}
																|#{order.order_items.first.item.itemable.country_name}" %></td>
															<td>
																<%= "#{order.order_items.first.item.itemable.country_name}
																#{order.order_items.first.item.itemable.card_type}
																#{order.order_items.first.item.itemable.card_category}
																#{order.order_items.first.item.itemable.brand}" %></td>
															<td>
																<%= order.order_items.first.item.user.username %></td>
															<td><%= order.created_at.strftime("%a, %d %b %Y") %></td>
															<td>no report</td>
															<td>
																<%= "#{order.aasm_state.eql?('pending')}" ? "#{link_to 'check', check_path(order), class: 'btn btn-xs btn-warning', data: {confirm: 'Are you sure?',
																	:'confirm-button-text' => 'Check card',
																	:'cancel-button-text' => 'Cancel',
																	:'confirm-button-color' => '#66CD00',
																	:'sweet-alert-type' => 'info',
																	text: "Éƒ 0.001 will be deducted from your account.*transaction fees will also apply"}}".html_safe : "#{order_status_label(order.aasm_state, order.id)}".html_safe %></td>

														</tr>
													<% end -%>
												<% end -%>
											</tbody>
										</table>
									</div>
								</div>
							</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
